<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        for(let i = 1 ; i <= 8 ; i = i+2){
            if(i>5){
                continue
            }
            console.log(i);
        }


        for(let i = 1 ; i<=5 ; i++){
            document.write(i,"<br>");
            for (let j = 1; j <=5; j++) {
                document.write(j)
            }
            document.write(" ","<br>");
        }




        for(let i = 0 ; i<5 ; i++){
            for(let j = 0 ; j<i ; j++){
                document.write("*");
            }
            document.write("<br>");
        }

        let n = 5;
        for(let i = 0 ; i<5 ; i++){
           for(let j = n ; j>i ; j--){
            document.write("|")
           }
        //    document.write("<br>")
           for(let j = 0 ; j<i ; j++){
                document.write("*");
            }
            document.write("<br>");
        }
           
        
    </script>
    
</body>
</html>
